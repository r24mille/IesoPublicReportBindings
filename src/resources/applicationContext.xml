<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:oxm="http://www.springframework.org/schema/oxm"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/oxm
    http://www.springframework.org/schema/oxm/spring-oxm-3.0.xsd">

	<!-- Adequacy -->
	<bean id="adequacyURL" class="java.net.URL">
		<constructor-arg
			value="http://reports.ieso.ca/public/Adequacy/PUB_Adequacy.xml" />
	</bean>

	<bean id="adequacyClient" class="name.reidmiller.parseieso.client.AdequacyClient">
		<constructor-arg ref="adequacyURL" />
		<constructor-arg ref="adequacyMarshaller" />
		<constructor-arg ref="adequacyMarshaller" />
	</bean>
	
	<oxm:jaxb2-marshaller id="adequacyMarshaller"
		contextPath="ca.ieso.reports.schema.adequacy" />

	<!-- Day-Ahead Adequacy -->
	<bean id="dayAheadAdequacyURL" class="java.net.URL">
		<constructor-arg
			value="http://reports.ieso.ca/public/DAAdequacy/PUB_DAAdequacy.xml" />
	</bean>

	<bean id="dayAheadAdequacyClient" class="name.reidmiller.parseieso.client.DayAheadAdequacyClient">
		<constructor-arg ref="dayAheadAdequacyURL" />
		<constructor-arg ref="dayAheadAdequacyMarshaller" />
		<constructor-arg ref="dayAheadAdequacyMarshaller" />
	</bean>
	
	<oxm:jaxb2-marshaller id="dayAheadAdequacyMarshaller"
		contextPath="ca.ieso.reports.schema.daadequacy" />

	<!-- Day-Ahead Area Operating Reserve Shortfall -->
	<bean id="dayAheadAreaOperatingReserveShortfallURL" class="java.net.URL">
