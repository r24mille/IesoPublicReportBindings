		class="name.reidmiller.parseieso.client.DayAheadAreaOperatingReserveShortfallClient">
		<constructor-arg ref="dayAheadAreaOperatingReserveShortfallURL" />
		<constructor-arg ref="dayAheadAreaOperatingReserveShortfallMarshaller" />
		<constructor-arg ref="dayAheadAreaOperatingReserveShortfallMarshaller" />
	</bean>
	
	<oxm:jaxb2-marshaller id="dayAheadAreaOperatingReserveShortfallMarshaller"
		contextPath="ca.ieso.reports.schema.daareaopresshortfall" />

	<!-- Day-Ahead Area Reserve Constraints -->
	<bean id="dayAheadAreaReserveConstraintsURL" class="java.net.URL">
		<constructor-arg
			value="http://reports.ieso.ca/public/DAAreaReserveConst/PUB_DAAreaReserveConst.xml" />
	</bean>

	<bean id="dayAheadAreaReserveConstraintsClient"
		class="name.reidmiller.parseieso.client.DayAheadAreaReserveConstraintsClient">
		<constructor-arg ref="dayAheadAreaReserveConstraintsURL" />
		<constructor-arg ref="dayAheadAreaReserveConstraintsMarshaller" />
		<constructor-arg ref="dayAheadAreaReserveConstraintsMarshaller" />
	</bean>
	
	<oxm:jaxb2-marshaller id="dayAheadAreaReserveConstraintsMarshaller"
		contextPath="ca.ieso.reports.schema.daareareserveconst" />

	<!-- Day-Ahead Constrainted Totals -->
	<bean id="dayAheadConstrainedTotalsURL" class="java.net.URL">
		<constructor-arg
			value="http://reports.ieso.ca/public/DAConstTotals/PUB_DAConstTotals.xml" />
	</bean>

	<bean id="dayAheadConstrainedTotalsClient"
		class="name.reidmiller.parseieso.client.DayAheadConstrainedTotalsClient">
		<constructor-arg ref="dayAheadConstrainedTotalsURL" />
		<constructor-arg ref="dayAheadConstrainedTotalsMarshaller" />
		<constructor-arg ref="dayAheadConstrainedTotalsMarshaller" />
	</bean>
	
	<oxm:jaxb2-marshaller id="dayAheadConstrainedTotalsMarshaller"
		contextPath="ca.ieso.reports.schema.daconsttotals" />

	<!-- Day-Ahead Intertie Scheduling Limits -->
