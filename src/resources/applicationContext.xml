	<bean id="generatorOutputCapabilityURL" class="java.net.URL">
		<constructor-arg
			value="http://reports.ieso.ca/public/GenOutputCapability/PUB_GenOutputCapability.xml" />
	</bean>

	<bean id="generatorOutputCapabilityClient"
		class="name.reidmiller.parseieso.client.GeneratorOutputCapabilityClient">
		<constructor-arg ref="generatorOutputCapabilityURL" />
		<constructor-arg ref="generatorOutputCapabilityMarshaller" />
		<constructor-arg ref="generatorOutputCapabilityMarshaller" />
	</bean>
	
	<oxm:jaxb2-marshaller id="generatorOutputCapabilityMarshaller"
		contextPath="ca.ieso.reports.schema.genoutputcapability" />

	<!-- Variable Generation Forecast Summary -->
	<bean id="variableGenerationForecastSummaryURL" class="java.net.URL">
		<constructor-arg
			value="http://reports.ieso.ca/public/VGForecastSummary/PUB_VGForecastSummary.xml" />
	</bean>

	<bean id="variableGenerationForecastSummaryClient"
		class="name.reidmiller.parseieso.client.VariableGenerationForecastSummaryClient">
