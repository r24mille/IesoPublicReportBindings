	</bean>

	<bean id="dayAheadShadowPricesClient"
		class="name.reidmiller.parseieso.client.DayAheadShadowPricesClient">
		<constructor-arg ref="dayAheadShadowPricesURL" />
		<constructor-arg ref="dayAheadShadowPricesMarshaller" />
		<constructor-arg ref="dayAheadShadowPricesMarshaller" />
	</bean>
	
	<oxm:jaxb2-marshaller id="dayAheadShadowPricesMarshaller"
		contextPath="ca.ieso.reports.schema.dashadowprices" />

