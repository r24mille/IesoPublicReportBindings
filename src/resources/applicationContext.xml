	</bean>
	
	<oxm:jaxb2-marshaller id="dayAheadIntertieSchedulingLimitsMarshaller"
		contextPath="ca.ieso.reports.schema.daintertieschedlimits" />

	<!-- Day-Ahead Security Constraints -->
	<bean id="dayAheadSecurityConstraintsURL" class="java.net.URL">
		<constructor-arg
			value="http://reports.ieso.ca/public/DASecurityConstraints/PUB_DASecurityConstraints.xml" />
